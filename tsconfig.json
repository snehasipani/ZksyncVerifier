{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },

    /* ADDED / CHANGED FOR HARDHAT: */
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "types": ["node", "hardhat"]
  },

  /* include scripts and hardhat config so TS checks them too */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "scripts/**/*.ts",
    "hardhat.config.*",
    "hardhat.config.*.*"
  ],
  "exclude": ["node_modules"]
}
